{
  "family": "zenn-ecs-cdk-ecspresso-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "{{ cfn_output `zenn-ecs-cdk-ecspresso` `devTaskExecutionRoleArn` }}",
  "runtimePlatform": {
    "cpuArchitecture": "ARM64",
    "operatingSystemFamily": "LINUX"
  },
  "containerDefinitions": [
    {
      "name": "app",
      "image": "{{ cfn_output `zenn-ecs-cdk-ecspresso` `devEcrRepositoryUri` }}:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "{{ cfn_output `zenn-ecs-cdk-ecspresso` `devLogGroupName` }}",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "essential": true
    }
  ]
}
